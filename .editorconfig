root = true

[*]
indent_style = space
indent_size = 4
tab_width = 8
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.lua]
indent_size = 2

[*.nix]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.snippets]
indent_style = tab
tab_width = 4

[Makefile]
indent_style = tab
indent_size = tab

[wt/settings.json]
indent_size = 4
insert_final_newline = false
